@model CardGame.Web.Models.User

@{
    ViewBag.Title = "Login";
}

<div class="jumbotron">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1>Password reset</h1>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group jumbotext">
                @Html.LabelFor(u => u.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-7">
                    @Html.EditorFor(u => u.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="Reset Password" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div style="margin-top:60px">
        <h4><span class="borderbutton">@Html.ActionLink("Home", "Index", "Home")</span></h4>
    </div>
</div>