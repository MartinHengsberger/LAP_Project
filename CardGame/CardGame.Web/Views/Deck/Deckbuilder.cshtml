@model IEnumerable<CardGame.Web.Models.CardCollection>
@{
    ViewBag.Title = "Deckbuilder";
}
<div class="jumbotron" style="margin-bottom:200px; padding-right:0px; ">

    <h1>Deckbuilder</h1>
   
    @foreach (var item in Model)
    {
        <div class="row col-md-4 col-sm-6 col-xs-12" style="margin-top:37px">
            <div class="col-md-6 vcenter" style="margin-top:16px">
                <div class="container" style="font-size:12px">
                    @*<div class="row">
                        @Html.DisplayFor(c => item.Cardname)
                    </div>
                    <div class="row">
                        @Html.DisplayNameFor(c => c.Mana):
                        @Html.DisplayFor(c => item.Mana)
                    </div>
                    <div class="row">
                        @Html.DisplayNameFor(c => c.Life):
                        @Html.DisplayFor(c => item.Life)
                    </div>
                    <div class="row">
                        @Html.DisplayNameFor(c => c.Attack):
                        @Html.DisplayFor(c => item.Attack)
                    </div>*@
                    <div class="row">
                        @Html.DisplayNameFor(c => c.Number):
                        @Html.DisplayFor(c => item.Number)
                    </div>
                </div>
            </div>
            <div class="col-md-6" style="position:relative">
                @{
                    var base64 = Convert.ToBase64String(item.pic);
                    var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                }
                <img class="galleryImg img-responsive" src="@imgSrc" />
            </div>

        </div>
     } 

    <div>
        <h4 style="text-align:left;margin-top:620px">@Html.ActionLink("Home", "Index", "Home")</h4>
    </div>
</div>

