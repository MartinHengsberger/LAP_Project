@model IEnumerable<CardGame.Web.Models.Pack>
@{
    ViewBag.Title = "Index";
}


<div class="jumbotron" style="margin-bottom:200px">
    <h1>Cardshop</h1>
    <div class="row" style="margin-bottom:50px; padding-bottom:50px">
        @* i=3 nur Cardpacks / i=6 + Goldpacks*@
        @for (int i = 0; i < 3; i++)
        {
            <div class="col-md-4 img-responsive">
                <img src=@Model.ToList()[i].Url style="max-height:200px" />
                @Model.ToList()[i].Packname
                @Model.ToList()[i].Packprice
                @if (Model.ToList()[i].Cardquantity == 0)
                { <span>€</span> }
                else
                { <span>Gold</span> }
                <input type="button" value="Buy" />
            </div>
        }
        
    </div>
</div>

<div class="jumbotron" style="margin-bottom:200px;padding-left:10px;padding-right:10px; min-height:600px">
    <h1>Cardshop</h1>
    @for (int i = 0; i < 6; i++)
    {
        <div class="row col-md-4 col-sm-6 col-xs-12" style="margin-top:37px">
            <div class="col-md-8 vcenter" style="margin-top:26px">
                <div class="container" style="font-size:16px; margin-left:50px">
                    <div class="row">
                        @Model.ToList()[i].Packname
                    </div>
                    <div class="row" style="font-size:24px; margin-top:10px" >
                        @Model.ToList()[i].Packprice 
                        @if (Model.ToList()[i].Cardquantity == 0)
                        { <span>€</span> }
                        else
                        { <span>Gold</span> }
                        
                    </div>
                    <div class="row">
                        <input type="button" value="Buy" />
                    </div>
                </div>
            </div>
            <div class="col-md-4" style="position:relative">
                <img src=@Model.ToList()[i].Url style="max-height:200px; min-height:150px; min-width:150px" class="img-responsive" />
            </div>

        </div>
       }

    <div>
        <h4 style="text-align:left;margin-top:400px">@Html.ActionLink("Home", "Index", "Home")</h4>
    </div>
</div>


