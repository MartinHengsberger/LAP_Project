@model IEnumerable<CardGame.Web.Models.SoldPack>

@{
    ViewBag.Title = "Statistic";
}


<div class="jumbotron" style="margin-top:100px !important; margin-bottom:200px">

    <div>
        <h3>Statistics of purchased packages</h3>

        <div class="container" style="font-size:24px; margin-top:50px; margin-bottom:50px; align-items:center">
            <img src="@Url.Action("CharterColumn")" alt="Chart" style="background-color:transparent" />
        </div>


        <div class="container" style="margin-bottom:10px">
            <div class="row" style="border:1px solid white; font-size:20px; padding-top:10px">
                <div class="col-md-6">
                    @Html.DisplayNameFor(c => c.Packname)
                    @*@Html.Label("Packname", htmlAttributes: new { @class = "col-md-6" })*@
                </div>
                <div class="col-md-6">
                    @Html.DisplayNameFor(c => c.DateOfPurchase)
                    @*@Html.Label("Date of Purchase", htmlAttributes: new { @class = "col-md-6" })*@
                </div>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="container">
                <div class="row" style="border:1px solid white; height:25px; padding-top:5px; font-size:16px">
                    <div class="col-md-6">
                        @Html.DisplayFor(p => item.Packname)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(p => item.DateOfPurchase)
                    </div>
                </div>
            </div>
        }


    </div>

    <div style="margin-top:70px">
        <h4> <span class="borderbutton" style="text-align:left">@Html.ActionLink("Home", "Index", "Home")</span></h4>
    </div>
</div>



<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
